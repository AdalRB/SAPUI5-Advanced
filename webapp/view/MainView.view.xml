<mvc:View controllerName="alfa01.employeesv2.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content> 
            <HBox id="HBox1">
                <Label id="labelEmployee" 
                       labelFor="inputEmployee" 
                       text="{i18n>labelEmployee}" 
                       class="sapUiSmallMargin"/>

                <Input id="inputEmployee" 
                       value="{jsonCountries>/EmployeeId}"
                       maxLength="6" 
                       width="200px" 
                       class="sapUiSmallMarginEnd"
                       /> 
                
                <Label id="labelCountry" 
                       labelFor="slCountry" 
                       text="{i18n>labelCountry}" 
                       class="sapUiSmallMargin"
                       visible="true"/> 

                <Select id="slCountry" 
                        selectedKey="{jsonCountries>/CountryKey}" 
                        forceSelection="false" 
                        items="{jsonCountries>/ListCountry}" 
                        visible="true">
                        
                    <items>
                        <core:Item id="i1" key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                    </items>
                </Select>

                <Button id="btnFilter" 
                        text="{i18n>btnFilter}" 
                        icon="sap-icon://search" 
                        press="onFilter" 
                        class="sapUiSmallMarginEnd"/>

                <Button id="btnClearFilter" 
                        text="{i18n>btnClearFilter}" 
                        icon="sap-icon://clear-filter" 
                        press="onClearFilter" 
                        class="sapUiSmallMarginEnd"/>
            </HBox>

            <HBox id="HBox2">
                <Panel id="panel1">
                    <Button id="btnShowCity" text="{i18n>showCity}" visible="{jsonConfig>/visibleBtnShowCity}" press="onShowCity"/>
                    <Button id="btnHideCity" text="{i18n>hideCity}" visible="{jsonConfig>/visibleBtnHideCity}" press="onHideCity"/>
                    <Table id="tableEmployee" items="{jsonEmployees>/employees}">
                        <columns>
                            <Column id="c1" visible="{jsonConfig>/visibleID}">
                                <header>
                                    <Label id="l1" text="{i18n>tableId}"/>
                                </header>
                            </Column>
                            <Column id="c2" visible="{jsonConfig>/visibleName}">
                                <header>
                                    <Label id="l2" text="{i18n>tableName}"/>
                                </header>
                            </Column>
                            <Column id="c3" visible="{jsonConfig>/visibleCountry}">
                                <header>
                                    <Label id="l3" text="{i18n>tableCountry}"/>
                                </header>
                            </Column>
                            <Column id="c4" visible="{jsonConfig>/visibleCity}">
                                <header>
                                    <Label id="l4" text="{i18n>tableCity}"/>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="cl1" type="Active" press="showOrders">
                                <cells>
                                    <Label id="l5" text="{jsonEmployees>EmployeeID}"/>
                                    <Label id="l6" text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                    <Label id="l7" text="{jsonEmployees>Country}"/>
                                    <Label id="l8" text="{jsonEmployees>City}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <HBox id="ordersTable">
                        
                    </HBox>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
